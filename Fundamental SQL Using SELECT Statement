# Penggunaan Perintah SELECTâ€¦ FROMâ€¦

# Mengambil Seluruh Kolom dalam suatu Tabel ðŸš€
SELECT * FROM ms_produk;


# Mengambil Satu Kolom dari Tabel ðŸš€
SELECT nama_produk 
FROM ms_produk;


# Mengambil Lebih dari Satu Kolom dari Tabel ðŸš€
SELECT nama_produk, harga 
FROM ms_produk;


# Membatasi Pengambilan Jumlah Row Data ðŸš€
SELECT nama_produk, harga 
FROM ms_produk LIMIT 5;


# Penggunaan SELECT DISTINCT statement ðŸš€
SELECT DISTINCT nama_customer, alamat 
FROM ms_pelanggan;


# Prefix dan Alias

# Menggunakan Prefix pada Nama Kolom ðŸš€
SELECT ms_produk.kode_produk 
FROM ms_produk;


# Menggunakan Alias pada Kolom ðŸš€
SELECT no_urut AS nomor, nama_produk AS nama 
FROM ms_produk;


# Menghilangkan Keyword 'AS' ðŸš€
SELECT no_urut nomor, nama_produk nama 
FROM ms_produk;


# Menggabungkan Prefix dan Alias ðŸš€
SELECT ms_produk.harga AS harga_jual 
FROM ms_produk;


# Menggunakan Alias pada Tabel ðŸš€
SELECT * FROM ms_produk t2;


# Prefix dengan Alias Tabel ðŸš€
SELECT t2.nama_produk, t2.harga 
FROM ms_produk t2;



# Menggunakan Filter

# Menggunakan WHERE ðŸš€
SELECT * FROM ms_produk 
WHERE nama_produk = 'Tas Travel Organizer DQLab';


# Menggunakan Operand OR ðŸš€
SELECT * FROM ms_produk 
WHERE nama_produk = 'Gantungan Kunci DQLab' 
OR nama_produk = 'Tas Travel Organizer DQLab' 
OR nama_produk = 'Flashdisk DQLab 64 GB';


# Filter untuk Angka ðŸš€
SELECT * FROM ms_produk 
WHERE harga > 50000;


# Menggunakan Operand AND ðŸš€
SELECT * FROM ms_produk 
WHERE nama_produk = 'Gantungan Kunci DQLab' AND harga < 50000;



# Mini Project

# Proyek dari Cabang A ðŸš€
SELECT kode_pelanggan, nama_produk, qty, harga, qty*harga AS total 
FROM tr_penjualan 
WHERE qty*harga >= 100000 
ORDER BY total DESC;


